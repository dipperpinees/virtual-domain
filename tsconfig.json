{
  "compilerOptions": {
      "target": "es6",
      "module": "commonJS",
      "declaration": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true
  },
  "types": [
    "reflect-metadata",
    "jest"
  ],
  "exclude": [
    "node_modules", "**/*.spec.ts", "**/*.test.ts"
  ],
  "include": ["src/**/*"]
}